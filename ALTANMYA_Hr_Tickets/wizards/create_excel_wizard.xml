<?xml version="1.0"?>
<odoo>
    <record id="view_create_excel_report_form" model="ir.ui.view">
        <field name="name">create.excel.wizard.form</field>
        <field name="model">create.excel.wizard.payroll</field>
        <field name="arch" type="xml">
            <form>
                <p class="oe_grey">
					You want to Print Payslip Excel Report?
				</p>
                <footer>
                    <button name="prepare_excel_data" type="object" class="btn-primary" string="Generate Excel">
                    </button>

                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_excel_report" model="ir.actions.act_window">
        <field name="name">Create Excel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.excel.wizard.payroll</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_create_excel_report_form"/>
        <field name="target">new</field>
        <field name="context">{
            'dialog_size' : 'medium',
            }
        </field>
    </record>


    <act_window id="action_payslip_excel"
		name="Payslip Excel Report "
		res_model="create.excel.wizard.payroll"
		binding_model="hr.payslip"
		view_mode="form" target="new" />
</odoo>
