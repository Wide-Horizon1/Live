<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leave_type_view_inherit-2" model="ir.ui.view">
        <field name="name">hr.leave.view.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='time_off_requests'][1]/field[3]" position="before">
                <field name="approval_id" domain="[('time_off', '=', True)]"
                       attrs="{'invisible': [('leave_validation_type', '!=', 'new')] ,
                                'required': [('leave_validation_type', '=', 'new')] }"/>
            </xpath>
        </field>
    </record>
</odoo>