<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="approval_request_view_inherit" model="ir.ui.view">
        <field name="name">approval.request.inherit</field>
        <field name="model">approval.request</field>
        <field name="inherit_id" ref="approvals.approval_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="mode" attrs="{'invisible': [('check_timeoff', '=', False)]}"/>
                <field name="employee_id" attrs="{'invisible': [('check_timeoff', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='date_confirmed']" position="after">
                <label for="main_date_from" string="Dates"
                       attrs = "{'invisible': ['|', '|', ('half_day', '=', True), ('custom_hours', '=', True), ('check_timeoff', '=', False)]}"/>
                <div attrs = "{'invisible': ['|', '|', ('half_day', '=', True), ('custom_hours', '=', True), ('check_timeoff', '=', False)]}">
                    <div class="o_row">
                        <label for="main_date_from" string="From"/>
                        <field name="main_date_from" class="oe_inline"/>
                        <label for="main_date_to" string="To"/>
                        <field name="main_date_to" class="oe_inline"/>
                    </div>
                </div>
                <label for="half_date" string="Date"
                       attrs = "{'invisible': ['&amp;', ('half_day', '!=', True), ('custom_hours', '!=', True)]}"/>
                <div attrs = "{'invisible': ['&amp;', ('half_day', '!=', True), ('custom_hours', '!=', True)]}">
                    <div class="o_row">
                        <field name="half_date" class="oe_inline"/>
                        <field name="half_date_char" class="oe_inline" attrs="{'invisible': [('custom_hours', '=', True)]}"/>
                    </div>
                </div>
                <label for="half_day" string="" attrs="{'invisible': ['|', ('check_day', '=', True), ('check_timeoff', '=', False)]}"/>
                <div attrs="{'invisible': ['|', ('check_day', '=', True), ('check_timeoff', '=', False)]}">
                    <div class="o_row">
                        <field name="half_day" class="oe_inline"/>
                        <label for="half_day" string="Half Day"/>
                        <field name="custom_hours" class="oe_inline" attrs="{'invisible': [('check_halfday', '=', True)]}"/>
                        <label for="custom_hours" string="Custom Hours" attrs="{'invisible': [('check_halfday', '=', True)]}"/>
                    </div>
                </div>
                <label for="hour_from" string="" attrs="{'invisible': ['|',('check_hours', '!=', True), ('custom_hours', '!=', True)]}"/>
                <div attrs="{'invisible': ['|',('check_hours', '!=', True), ('custom_hours', '!=', True)]}">
                    <div class="o_row">
                        <label for="hour_from" string="From"/>
                        <field name="hour_from" class="oe_inline"/>
                        <label for="hour_to" string="To"/>
                        <field name="hour_to" class="oe_inline"/>
                    </div>
                </div>
                 <label for="duration" string="Duration"
                       attrs="{'invisible': ['|', '&amp;', ('half_day', '=', True), ('check_halfday', '=', True), ('check_timeoff', '=', False)]}"/>
                <div attrs="{'invisible': ['|', '&amp;', ('half_day', '=', True), ('check_halfday', '=', True), ('check_timeoff', '=', False)]}">
                    <div class="o_row" attrs = "{'invisible': [
                                '&amp;', ('check_hours', '=', True),
                               '|', ('half_day', '=', True), ('custom_hours', '=', True)
                            ]}">
                        <field name="duration" class="oe_inline"/>
                        <span>Days</span>
                    </div>
                     <field name="hours_only" attrs="{'invisible': ['|', ('check_halfday', '=', True), ('check_day', '=', True)]}"/>
                </div>
                <field name="description" attrs="{'invisible': [('check_timeoff', '=', False)]}"/>
                <field name="attachment"  widget="many2many_binary" attrs="{'invisible': [('check_timeoff', '=', False)]}"/>
                <field name="check_timeoff" invisible="1"/>
                <field name="check_halfday" invisible="1"/>
                <field name="check_hours" invisible="1"/>
                <field name="check_day" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>