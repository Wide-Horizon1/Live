<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="approval_category_view_inherit" model="ir.ui.view">
        <field name="name">approval.category.inherit</field>
        <field name="model">approval.category</field>
        <field name="inherit_id" ref="approvals.approval_category_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='automated_sequence']" position="after">
                <field name="time_off"/>
                <field name="for_half_day" invisible="1"/>
                <field name="for_hours" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>